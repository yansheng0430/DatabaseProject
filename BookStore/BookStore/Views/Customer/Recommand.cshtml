@using BookStore.Models
@model List<BookStore.Models.Book>
@{
    ViewBag.Title = "Recommand";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div class="site-wrap">
    <div class="bg-light py-3">
        <div class="container">
            <div class="row">
                <div class="col-md-12 mb-0"><a href=@Url.Action("Index", "customer")>Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Recommand</strong></div>
            </div>
        </div>
    </div>
</div>
<div class="site-section block-3 site-blocks-2 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-7 site-section-heading text-center pt-4">
                <h2>Recommand Products</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="nonloop-block-3 owl-carousel">
                    @for (int i = 0; i < 12; i++)
                    {
                        <!--商品資訊-->
                        <div class="item">
                            <div class="block-4 text-center" style="height:500px">
                                <figure class="block-4-image"style="display:block">
                                    <img src=@Model[i].Cover zalt="Product Image" style="margin:auto;width:250px;height:300px;padding:5px">
                                </figure>
                                <div class="block-4-text p-4">
                                    <div style="text-align:center"><a href=@Url.Action("ShopSingle", "Customer", new { ISBN = Model[i].ISBN })>@Model[i].Name</a></div>
                                    <div class="text-primary font-weight-bold">$ @Model[i].UnitPrice</div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
