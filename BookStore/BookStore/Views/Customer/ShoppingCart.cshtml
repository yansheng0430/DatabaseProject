@using BookStore.Models
@model List<BookStore.Models.BookShopped>
@{
    ViewBag.Title = "ShoppingCart";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div class="site-wrap">
        <div class="bg-light py-3">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 mb-0"><a href=@Url.Action("Index", "Customer")>Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Cart</strong></div>
                </div>
            </div>
        </div>
        <div class="site-section">
            <div class="container">
                <div class="row mb-5">
                    <form class="col-md-12" method="post">
                        <div class="site-blocks-table">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">Image</th>
                                        <th class="product-name">Product</th>
                                        <th class="product-price">Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product-total">Subtotal</th>
                                        <th class="product-remove">Remove</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (BookShopped bookShopped in Model)
                                    {
                                        <!--載入商品資訊-->
                                        <tr>
                                            <td class="product-thumbnail">
                                                <!--商品圖片-->
                                                <img src=@bookShopped.Cover alt="Image" class="img-fluid">
                                            </td>
                                            <td class="product-name">
                                                <h class="text-black" style="font-size:smaller">
                                                    <a href=@Url.Action("ShopSingle", "Customer", new { ISBN = bookShopped.ISBN})>
                                                        @bookShopped.Name
                                                    </a>
                                                </h>
                                            </td>
                                            <td>@bookShopped.UnitPrice</td>
                                            <td>
                                                <!--加減商品數量-->
                                                <div class="input-group mb-3 " style="max-width: 80px;">
                                                    <input type="text" class="form-control text-center" value="1" placeholder="@bookShopped.Amount" aria-label="Example text with button addon" aria-describedby="button-addon1">
                                                </div>
                                            </td>
                                            <td>@bookShopped.Subtotal</td>
                                            <td><a href=@Url.Action("ShoppingCartDeleted", "Customer", new { customerID = bookShopped.CustomerID, ISBN = bookShopped.ISBN}) class="btn btn-primary btn-sm">X</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="row mb-5">
                            <div class="col-md-6 mb-3 mb-md-0">
                               <a href=@Url.Action("ShoppingCart", "Customer", new { customerID = User.Identity.Name}) class="btn btn-primary btn-sm btn-block">UPDATE CART</a>
                            </div>
                            <div class="col-md-6">
                                <a href=@Url.Action("Shop", "Customer") class="btn btn-outline-primary btn-sm btn-block">CONTINUE SHOPPING</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 pl-5">
                        <div class="row justify-content-end">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-12 text-right border-bottom mb-5">
                                        <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                                    </div>
                                </div>
                                <div class="row mb-5">
                                    <div class="col-md-6">
                                        <span class="text-black">Total</span>
                                    </div>
                                    <div class="col-md-6 text-right">
                                        <strong class="text-black">@ViewBag.BooksTotal</strong>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <p ><a href=@Url.Action("Checkout", "Customer", new { customerID = User.Identity.Name }) class="buy-now btn btn-sm btn-primary">Proceed To Checkout</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>