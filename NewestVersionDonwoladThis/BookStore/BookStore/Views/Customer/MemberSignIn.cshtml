@model BookStore.Models.AuthMember
@{
    ViewBag.Title = "MemberSignIn";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<body>
    <!--錯誤時警告訊息尚未加上去-->
    <div class="container">
        <h2>Sign In</h2>
        @using (Html.BeginForm())
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Account, htmlAttributes: new { @class = "col-md-2 control-label" })
                <div class="col-md-10" style="width:220px">
                    @Html.TextBoxFor(model => model.Account, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Account, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-2 control-label" })
                <div class="col-md-10" style="width:300px">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Sign in" />
                </div>
            </div>
        }
        <div>
            <a href=@Url.Action("AccountCreate", "Customer")>Create new account</a>
        </div>
    </div>
</body>

